<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name= "roundimageview" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="color">@color/white_FFFFFF</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- ActionBar -->
        <item name="android:windowActionBar">false</item>
        <!-- 標題 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 陰影 -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="RippleButton">
        <item name="android:theme">@style/SelectableItemThemeColor</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="SelectableItemThemeColor">
        <item name="colorControlHighlight">#44000000</item>
    </style>

</resources>